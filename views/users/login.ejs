<% layout("/layouts/boilerplate.ejs") %>

<style>
  @media (max-width: 430px) {
    .offset-3 {
      margin-left: 16.66666667%;
    }
    .col-6 {
      flex: 0 0 auto;
      width: 66.66666667%;
    }
  }
</style>

<div class="row mt-3">
  <h3 class="col-6 offset-3">Login to WanderLust</h3>
  <br />
  <div class="col-6 offset-3">
    <form action="/login" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <lable for="username" class="form-label"><b>Username</b></lable>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
          placeholder="Enter username"
        />
      </div>
      <div class="mb-3">
        <lable for="password" class="form-label"><b>Password</b></lable>
        <input
          type="password"
          name="password"
          id="pass"
          class="form-control"
          required
          placeholder="Enter password"
        />
      </div>
      <button class="btn add-btn btn-dark">Login</button>
    </form>
    <div style="margin-top: 10px" id="account">
      <p>
        <b>Don't have an account?</b>&nbsp;&nbsp;&nbsp;<a href="/signup"
          ><b>SignUp</b></a
        >
      </p>
    </div>
    <div class="googleoauth">
      <button>
        <a href="/auth/google"
          ><img src="./icon/google-login.jpg" /> &nbsp;Login with Google</a
        >
      </button>
    </div>
  </div>
</div>
