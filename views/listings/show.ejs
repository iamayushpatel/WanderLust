  <!-- Razorpay Script -->
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
  document.getElementById("booking-btn").addEventListener("click", async function (event) {
    event.preventDefault(); // Prevent default form submission

    // Check if the user is logged in
    const isLoggedIn = <%= currUser ? 'true' : 'false' %>;
    if (!isLoggedIn) {
      window.location.href = "/login";
      return;
    }

    // Get the calculated total amount from hidden input
    const amountInput = document.getElementById("finalAmount");
    const totalAmount = parseInt(amountInput.value);
    if (!totalAmount || totalAmount <= 0) {
      alert("Please select valid check-in and check-out dates.");
      return;
    }

    sessionStorage.setItem("razorpayTriggered", "true");

    const listingId = "<%= listing._id %>";
    const name = "<%= listing.title %>";
    const description = "<%= listing.description %>";

    console.log("Sending data to backend:", {
      listingId,
      name,
      amount: totalAmount,
      description,
    });

    try {
      const response = await fetch("/createOrder", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ listingId, name, amount: totalAmount, description }),
      });

      const orderData = await response.json();
      console.log("Received order response:", orderData);

      if (!orderData.success) {
        alert("Error creating order. Please try again.");
        return;
      }

      const options = {
        key: orderData.key_id,
        amount: orderData.amount, // amount from backend in paise
        currency: "INR",
        name: orderData.product_name,
        description: orderData.description,
        order_id: orderData.order_id,
        handler: function (response) {
          alert("Payment Successful! Payment ID: " + response.razorpay_payment_id);
          sessionStorage.removeItem("razorpayTriggered");
          window.location.href = "/payment-success";
        },
        prefill: {
          name: orderData.name,
          email: orderData.email,
          contact: orderData.contact,
        },
        theme: { color: "#3399cc" },
      };

      const rzp = new Razorpay(options);
      rzp.on("payment.failed", function (response) {
        console.error("Payment failed:", response.error);
        alert("Payment failed. Try again.");
        sessionStorage.removeItem("razorpayTriggered");
      });

      rzp.open();
    } catch (error) {
      console.error("Error in booking:", error);
      alert("An error occurred. Please try again.");
      sessionStorage.removeItem("razorpayTriggered");
    }
  });

  // Prevent Razorpay from reopening on back button
  window.onload = function () {
    if (sessionStorage.getItem("razorpayTriggered") === "true") {
      sessionStorage.removeItem("razorpayTriggered");
      history.replaceState(null, "", location.href);
    }
  };

  window.addEventListener("popstate", function () {
    sessionStorage.removeItem("razorpayTriggered");
    location.reload();
  });
</script>
